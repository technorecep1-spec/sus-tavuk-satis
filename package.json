{
  "name": "wyandotte-chickens-ecommerce",
  "version": "1.0.0",
  "description": "Full-stack e-commerce platform for Wyandotte ornamental chickens",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend/frontend && npm start",
    "build": "npm run install-client && npm run build-client",
    "install-client": "cd frontend/frontend && npm install",
    "build-client": "cd frontend/frontend && npm run build",
    "build-full": "npm run install-client && npm run build-client",
    "create-admin": "node backend/scripts/createAdmin.js",
    "clear-db": "node backend/scripts/clearDatabase.js",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "ecommerce",
    "chickens",
    "wyandotte",
    "mern",
    "react",
    "nodejs"
  ],
  "author": "Wyandotte Chicken Farm",
  "license": "MIT"
}
