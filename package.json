{
  "name": "wyandotte-chickens-ecommerce",
  "version": "1.0.0",
  "description": "Full-stack e-commerce platform for Wyandotte ornamental chickens",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend/frontend && npm start",
    "build": "npm run install-client && npm run build-client",
    "install-client": "cd frontend/frontend && npm install",
    "build-client": "cd frontend/frontend && npm run build",
    "build-full": "npm run install-client && npm run build-client",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["ecommerce", "chickens", "wyandotte", "mern", "react", "nodejs"],
  "author": "Wyandotte Chicken Farm",
  "license": "MIT"
}
