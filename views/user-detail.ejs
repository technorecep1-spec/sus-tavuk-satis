<%- include('partials/header') %>

<div class="main-content">
    <a href="/admin" class="btn btn-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Admin Paneline Geri Dön
    </a>

    <h1>Kullanıcı Detayları</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-header h5">
            Profil Bilgileri
        </div>
        <div class="card-body">
            <p><strong>Ad Soyad:</strong> <%= viewedUser.firstName %> <%= viewedUser.lastName %></p>
            <p><strong>E-posta:</strong> <%= viewedUser.email %></p>
            <p><strong>Telefon:</strong> <%= viewedUser.phone || 'Belirtilmemiş' %></p>
            <p><strong>Adres:</strong> <%- viewedUser.address.replace(/\n/g, '<br>') || 'Belirtilmemiş' %></p>
            <p><strong>Kayıt Tarihi:</strong> <%= new Date(viewedUser._id.getTimestamp()).toLocaleString('tr-TR') %></p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header h5">
            Kullanıcının Sipariş Geçmişi
        </div>
        <div class="card-body">
            <% if (orders && orders.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Sipariş Tarihi</th>
                                <th>Ürünler</th>
                                <th>Tutar</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(order => { %>
                                <tr>
                                    <td><%= new Date(order.createdAt).toLocaleDateString('tr-TR') %></td>
                                    <td>
                                        <ul class="list-unstyled mb-0">
                                            <% order.products.forEach(item => { %>
                                                <li>
                                                    <%= item.product ? item.product.isim : 'Ürün bilgisi yok' %> (x<%= item.quantity %>)
                                                </li>
                                            <% }); %>
                                        </ul>
                                    </td>
                                    <td><%= order.total %> TL</td>
                                    <td><span class="badge bg-info"><%= order.status %></span></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p>Bu kullanıcının hiç siparişi bulunmuyor.</p>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>