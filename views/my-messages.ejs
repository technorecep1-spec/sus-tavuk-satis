<%- include('partials/header') %>

<div class="main-content">
    <h1>Mesajlarım</h1>
    <% if (conversations && conversations.length > 0) { %>
        <div class="list-group shadow-sm">
            <% conversations.forEach(convo => { %>
                <a href="/message/<%= convo._id %>" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1"><%= convo.subject %></h5>
                        <small><%= new Date(convo.updatedAt).toLocaleDateString('tr-TR') %></small>
                    </div>
                    <p class="mb-1">Admin ile aranızdaki konuşma.</p>
                </a>
            <% }); %>
        </div>
    <% } else { %>
        <div class="alert alert-info">Henüz hiç mesajınız yok.</div>
    <% } %>
</div>

<%- include('partials/footer') %>