<%- include('partials/header') %>

<!-- Gallery Page -->
<section class="gallery-page">
    <div class="container">
        <div class="gallery-header">
            <div class="gallery-hero">
                <div class="gallery-hero-content">
                    <div class="gallery-badge">
                        <i class="bi bi-images"></i>
                        <span>Fotoğraf Galerisi</span>
                    </div>
                    <h1 class="gallery-title">
                        <span class="title-main">Silver Wyandotte</span>
                        <span class="title-accent">Galerimiz</span>
                    </h1>
                    <p class="gallery-description">
                        Safkan Silver Wyandotte sürümüzden en güzel kareler. 
                        <br>Çiftliğimizdeki günlük yaşamdan özel anlar.
                    </p>
                </div>
                
                <!-- Gallery Stats -->
                <div class="gallery-stats">
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="bi bi-camera-fill"></i>
                        </div>
                        <div class="stat-content">
                            <span class="stat-number"><%= images ? images.length : 0 %></span>
                            <span class="stat-label">Fotoğraf</span>
                        </div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div class="stat-content">
                            <span class="stat-number">7/24</span>
                            <span class="stat-label">Güncellenir</span>
                        </div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="bi bi-star-fill"></i>
                        </div>
                        <div class="stat-content">
                            <span class="stat-number">HD</span>
                            <span class="stat-label">Kalite</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="gallery-content">
            <% if (images && images.length > 0) { %>
                <!-- Filter Buttons -->
                <div class="gallery-filters">
                    <button class="filter-btn active" data-filter="all">
                        <i class="bi bi-grid-3x3-gap"></i>
                        <span>Tümü</span>
                    </button>
                    <button class="filter-btn" data-filter="tavuk">
                        <i class="bi bi-egg-fried"></i>
                        <span>Tavuklar</span>
                    </button>
                    <button class="filter-btn" data-filter="horoz">
                        <i class="bi bi-trophy"></i>
                        <span>Horozlar</span>
                    </button>
                    <button class="filter-btn" data-filter="civciv">
                        <i class="bi bi-heart"></i>
                        <span>Civcivler</span>
                    </button>
                    <button class="filter-btn" data-filter="ciftlik">
                        <i class="bi bi-house"></i>
                        <span>Çiftlik</span>
                    </button>
                </div>
                
                <!-- Gallery Grid -->
                <div class="gallery-grid" id="lightgallery">
                    <% images.forEach((image, index) => { %>
                        <div class="gallery-item" data-category="<%= image.category || 'tavuk' %>" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                            <a href="<%= image.imageUrl %>" class="gallery-link" data-sub-html="<h4><%= image.title %></h4><p><%= image.description || 'Silver Wyandotte' %></p>">
                                <div class="gallery-image">
                                    <img src="<%= image.imageUrl %>" alt="<%= image.title %>" loading="lazy">
                                    <div class="gallery-overlay">
                                        <div class="gallery-actions">
                                            <div class="gallery-icon">
                                                <i class="bi bi-zoom-in"></i>
                                            </div>
                                            <div class="gallery-icon">
                                                <i class="bi bi-heart"></i>
                                            </div>
                                            <div class="gallery-icon">
                                                <i class="bi bi-share"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="gallery-badge">
                                        <span><%= image.category || 'Tavuk' %></span>
                                    </div>
                                </div>
                                <div class="gallery-info">
                                    <h3><%= image.title %></h3>
                                    <p><%= image.description || 'Silver Wyandotte' %></p>
                                    <div class="gallery-meta">
                                        <span class="gallery-date">
                                            <i class="bi bi-calendar"></i>
                                            <%= new Date(image.createdAt).toLocaleDateString('tr-TR') %>
                                        </span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }); %>
                </div>
                
                <!-- Load More Button -->
                <div class="gallery-load-more">
                    <button class="btn btn-primary btn-lg" id="loadMoreBtn">
                        <i class="bi bi-arrow-down-circle"></i>
                        <span>Daha Fazla Yükle</span>
                    </button>
                </div>
            <% } else { %>
                <div class="empty-gallery">
                    <div class="empty-gallery-content">
                        <div class="empty-icon">
                            <i class="bi bi-images"></i>
                        </div>
                        <h3>Galeride henüz sergilenecek bir resim bulunmuyor</h3>
                        <p>Yakında güzel Silver Wyandotte fotoğrafları eklenecek!</p>
                        <div class="empty-actions">
                            <a href="/iletisim" class="btn btn-primary">
                                <i class="bi bi-envelope"></i>
                                <span>İletişime Geçin</span>
                            </a>
                            <a href="/urunler" class="btn btn-secondary">
                                <i class="bi bi-box"></i>
                                <span>Ürünlerimizi İnceleyin</span>
                            </a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

<%- include('partials/footer') %>