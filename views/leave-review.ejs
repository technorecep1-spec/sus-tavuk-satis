<%- include('partials/header') %>

<div class="main-content">
    <div class="container mt-4" style="max-width: 700px;">
        <div class="card bg-light shadow-sm">
            <div class="card-body p-4">
                <h2 class="card-title mb-1">Ürünü Değerlendiriyorsunuz:</h2>
                <h4 class="text-muted mb-4"><%= product.isim %></h4>
                
                <form action="/leave-review/<%= product._id %>" method="POST">
                    <div class="mb-3">
                        <label for="rating" class="form-label">Puanınız:</label>
                        <select name="rating" id="rating" class="form-select" required>
                            <option value="5">★★★★★ (Mükemmel)</option>
                            <option value="4">★★★★☆ (İyi)</option>
                            <option value="3" selected>★★★☆☆ (Orta)</option>
                            <option value="2">★★☆☆☆ (Kötü)</option>
                            <option value="1">★☆☆☆☆ (Çok Kötü)</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Yorumunuz:</label>
                        <textarea name="comment" id="comment" rows="5" class="form-control" placeholder="Ürün hakkındaki düşüncelerinizi, tecrübelerinizi paylaşın..." required></textarea>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">Yorumu Gönder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>