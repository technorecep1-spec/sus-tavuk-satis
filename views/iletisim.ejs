<%- include('partials/header') %>

<!-- Contact Page -->
<section class="contact-page">
    <div class="container">
        <div class="contact-header">
            <div class="contact-hero">
                <div class="contact-hero-layout">
                    <!-- Sol Taraf: Başlık -->
                    <div class="contact-title-section">
                        <h1 class="contact-title">
                            <span class="title-main">Bizimle</span>
                            <span class="title-accent">İletişime Geçin</span>
                        </h1>
                    </div>
                    
                    <!-- Sağ Taraf: Hareketli Baloncuklar -->
                    <div class="contact-bubbles">
                        <div class="bubble bubble-1">
                            <div class="bubble-icon">
                                <i class="bi bi-clock-fill"></i>
                            </div>
                            <div class="bubble-text">
                                <span class="bubble-title">24/7</span>
                                <span class="bubble-subtitle">Destek</span>
                            </div>
                        </div>
                        
                        <div class="bubble bubble-2">
                            <div class="bubble-icon">
                                <i class="bi bi-lightning-fill"></i>
                            </div>
                            <div class="bubble-text">
                                <span class="bubble-title">Hızlı</span>
                                <span class="bubble-subtitle">Yanıt</span>
                            </div>
                        </div>
                        
                        <div class="bubble bubble-3">
                            <div class="bubble-icon">
                                <i class="bi bi-chat-dots-fill"></i>
                            </div>
                            <div class="bubble-text">
                                <span class="bubble-title">%100</span>
                                <span class="bubble-subtitle">Memnuniyet</span>
                            </div>
                        </div>
                        
                        <div class="bubble bubble-4">
                            <div class="bubble-icon">
                                <i class="bi bi-shield-check"></i>
                            </div>
                            <div class="bubble-text">
                                <span class="bubble-title">Güvenli</span>
                                <span class="bubble-subtitle">Ödeme</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Unified Contact Section -->
        <div class="unified-contact-section">
            <div class="contact-container">
                <!-- Left Side: Message Form -->
                <div class="contact-form-area">
                    <div class="contact-form-card">
                        <h2>Mesaj Gönderin</h2>
                        <p>Silver Wyandotte süs tavukları hakkında sorularınızı, sipariş taleplerinizi veya önerilerinizi bizimle paylaşın.</p>
                        

                        <form action="/contact" method="POST" class="contact-form">
                            <div class="form-group">
                                <label for="name" class="form-label">Adınız Soyadınız</label>
                                <input type="text" id="name" name="name" required class="form-control" placeholder="Adınızı ve soyadınızı girin">
                            </div>
                            
                            <div class="form-group">
                                <label for="email" class="form-label">E-posta Adresiniz</label>
                                <input type="email" id="email" name="email" required class="form-control" placeholder="ornek@email.com">
                            </div>
                            
                            <div class="form-group">
                                <label for="subject" class="form-label">Konu</label>
                                <select id="subject" name="subject" required class="form-control">
                                    <option value="">Konu seçin</option>
                                    <option value="siparis">Sipariş Talebi</option>
                                    <option value="bilgi">Bilgi Alma</option>
                                    <option value="sikayet">Şikayet</option>
                                    <option value="oneri">Öneri</option>
                                    <option value="diger">Diğer</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="message" class="form-label">Mesajınız</label>
                                <textarea id="message" name="message" rows="6" required class="form-control" placeholder="Mesajınızı buraya yazın..."></textarea>
                            </div>
                            
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send"></i>
                                <span>Mesaj Gönder</span>
                            </button>
                        </form>
                    </div>
                </div>
                
                <!-- Right Side: Contact Info and Map -->
                <div class="contact-info-area">
                    <!-- Contact Information Cards -->
                    <div class="contact-info-grid">
                        <div class="contact-card">
                            <div class="contact-icon">
                                <i class="bi bi-geo-alt"></i>
                            </div>
                            <h3>Adresimiz</h3>
                            <p>Örnek Mah. Örnek Sk. No:1<br>İstanbul, Türkiye</p>
                        </div>
                        
                        <div class="contact-card">
                            <div class="contact-icon">
                                <i class="bi bi-telephone"></i>
                            </div>
                            <h3>Telefon</h3>
                            <p>+90 555 123 45 67</p>
                        </div>
                        
                        <div class="contact-card">
                            <div class="contact-icon">
                                <i class="bi bi-envelope"></i>
                            </div>
                            <h3>E-posta</h3>
                            <p>info@wyandottetr.com</p>
                        </div>
                        
                        <div class="contact-card">
                            <div class="contact-icon">
                                <i class="bi bi-clock"></i>
                            </div>
                            <h3>Çalışma Saatleri</h3>
                            <p>Pazartesi - Cumartesi<br>09:00 - 18:00</p>
                        </div>
                    </div>
                    
                    <!-- Google Maps Section -->
                    <div class="map-section">
                        <div class="map-header">
                            <h3>Konumumuz</h3>
                            <p>Çiftliğimizi ziyaret etmek için haritayı kullanabilirsiniz</p>
                        </div>
                        <div class="map-container">
                            <div style="text-align: center;">
                                <i class="bi bi-geo-alt" style="font-size: 3rem; color: #ff6b35; margin-bottom: 1rem;"></i>
                                <h4>Harita Yükleniyor...</h4>
                                <p>Google Maps entegrasyonu için API anahtarı gerekli</p>
                                <a href="https://maps.google.com" target="_blank" class="btn btn-primary" style="margin-top: 1rem;">
                                    <i class="bi bi-geo-alt"></i>
                                    Google Maps'te Aç
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %>