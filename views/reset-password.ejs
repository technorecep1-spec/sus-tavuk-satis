<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="user-form">
            <h1 class="text-center mb-4">Yeni Şifre Belirle</h1>

            <%- include('partials/flash-messages') %>

            <form action="/reset-password/<%= token %>" method="POST">
                <div class="mb-3">
                    <label for="password" class="form-label">Yeni Şifre:</label>
                    <input type="password" id="password" name="password" required class="form-control">
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">Yeni Şifre (Tekrar):</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required class="form-control">
                </div>
                <button type="submit" class="btn btn-primary w-100">Şifreyi Sıfırla</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>