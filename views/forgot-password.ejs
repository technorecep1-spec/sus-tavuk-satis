<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="user-form">
            <h1 class="text-center mb-4">Şifremi Unuttum</h1>
            <p class="text-center text-muted">Lütfen kayıtlı e-posta adresinizi girin. Size şifrenizi sıfırlamanız için bir link göndereceğiz.</p>

            <%- include('partials/flash-messages') %>

            <form action="/forgot-password" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">E-posta Adresi:</label>
                    <input type="email" id="email" name="email" required class="form-control">
                </div>
                <button type="submit" class="btn btn-primary w-100">Sıfırlama Linki Gönder</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>