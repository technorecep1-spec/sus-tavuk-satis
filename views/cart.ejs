<%- include('partials/header') %>

<div class="main-content">
    <h1>Alışveriş Sepetim</h1>
    
    <% if (cart && cart.length > 0) { %>
        <div class="row g-5">
            <div class="col-lg-8">
                <div class="card shadow-sm p-3">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Ürün</th>
                                    <th>Fiyat</th>
                                    <th>Adet</th>
                                    <th class="text-end">Toplam</th>
                                    <th class="text-center">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% cart.forEach(item => { %>
                                    <tr>
                                        <td><%= item.product.isim %></td>
                                        <td><%= formatPrice(item.product.fiyat) %></td>
                                        <td><%= item.quantity %></td>
                                        <td class="text-end"><%= formatPrice(item.total) %></td>
                                        <td class="text-center">
                                            <form action="/cart/remove" method="POST">
                                                <input type="hidden" name="productId" value="<%= item.product._id %>">
                                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                                    <i class="bi bi-trash"></i> Kaldır
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm p-3">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Sipariş Özeti</h5>
                        <div class="d-flex justify-content-between">
                            <span>Toplam Ürün:</span>
                            <span><%= session.cart.length %> Çeşit</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between h3">
                            <strong>Genel Toplam:</strong>
                            <strong><%= formatPrice(cartTotal) %></strong>
                        </div>
                        <form action="/checkout" method="POST" class="d-grid mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Siparişi Tamamla</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="alert alert-info">Alışveriş sepetiniz boş. <a href="/urunler" class="alert-link">Alışverişe Başla</a></div>
    <% } %>
</div>

<%- include('partials/footer') %>