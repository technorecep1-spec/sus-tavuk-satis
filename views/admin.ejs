        function toggleUserStatus(userId, currentStatus) {
            console.log('toggleUserStatus called with userId:', userId, 'currentStatus:', currentStatus);
            const newStatus = !currentStatus;
            const action = newStatus ? 'aktif' : 'pasif';
            
            if (confirm(`Kullanƒ±cƒ±yƒ± ${action} yapmak istediƒüinizden emin misiniz?`)) {
                showNotification('Kullanƒ±cƒ± durumu g√ºncelleniyor...', 'info');
                
                fetch('/admin/users/toggle-status', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        userId: userId,
                        isVerified: newStatus
                    })
                })
                .then(response => {
                    console.log('Toggle response status:', response.status);
                    return response.json();
                })
                .then(data => {
                    console.log('Toggle response data:', data);
