<%- include('partials/header') %>

<div class="main-content">
    <div class="card shadow-sm p-4">
        <div class="row g-5 align-items-center">
            <%# SOL SÜTUN: Sadece Resim %>
            <div class="col-lg-6">
                <div id="product-gallery">
                    <a href="<%= urun.resim %>" data-pswp-width="900" data-pswp-height="900" target="_blank">
                        <img src="<%= urun.resim %>" alt="<%= urun.isim %>" class="img-fluid rounded shadow">
                    </a>
                </div>
            </div>
            
            <%# SAĞ SÜTUN: Tüm Bilgiler Artık Burada %>
            <div class="col-lg-6 product-info-box">
                <h1 class="display-5 mb-2"><%= urun.isim %></h1> <%# Boşluk azaltıldı: mb-3 -> mb-2 %>
                <h2 class="price my-3 text-primary"><%= formatPrice(urun.fiyat) %></h2> <%# Boşluk azaltıldı: my-4 -> my-3 %>

                <div>
                    <% if (urun.stok > 0) { %>
                        <p class="text-success mb-2"><strong>Stokta:</strong> <%= urun.stok %> Adet</p>
                        <form action="/cart/add" method="POST">
                            <input type="hidden" name="productId" value="<%= urun._id %>">
                            <div class="input-group">
                                <input type="number" name="quantity" class="form-control" value="1" min="1" max="<%= urun.stok %>" style="max-width: 100px;">
                                <button type="submit" class="btn btn-primary btn-lg">Sepete Ekle</button>
                            </div>
                        </form>
                    <% } else { %>
                        <p class="text-danger"><strong>Stok Tükendi</strong></p>
                        <button type="button" class="btn btn-secondary btn-lg" disabled>Stok Tükendi</button>
                    <% } %>
                </div>

                <%# --- SEKMELİ YAPI BURAYA TAŞINDI --- %>
                <div class="mt-4"> <%# Boşluk azaltıldı: mt-5 -> mt-4 %>
                    <ul class="nav nav-tabs" id="productTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="description-tab" data-bs-toggle="tab" data-bs-target="#description" type="button" role="tab" aria-controls="description" aria-selected="true">Ürün Açıklaması</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab" aria-controls="reviews" aria-selected="false">
                                Değerlendirmeler <span class="badge rounded-pill bg-secondary"><%= reviews.length %></span>
                            </button>
                        </li>
                    </ul>
                    <div class="tab-content" id="productTabContent">
                        <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                            <p class="mt-3"><%= urun.aciklama %></p>
                        </div>
                        <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                            <div class="review-section mt-3">
                                <% if (reviews && reviews.length > 0) { %>
                                    <% reviews.forEach(review => { %>
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <p class="mb-1">
                                                    <strong><i class="bi bi-person-circle"></i> <%= review.user.email.split('@')[0] %></strong>
                                                    <span class="ms-2 text-warning">
                                                        <% for(let i = 0; i < review.rating; i++) { %>★<% } %><% for(let i = review.rating; i < 5; i++) { %>☆<% } %>
                                                    </span>
                                                </p>
                                                <p class="card-text"><%= review.comment %></p>
                                                <small class="text-muted"><%= new Date(review.createdAt).toLocaleDateString('tr-TR') %></small>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <p class="mt-3">Bu ürün için henüz bir değerlendirme yapılmamış.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                 <%# --- SEKMELİ YAPI BİTİŞ --- %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>